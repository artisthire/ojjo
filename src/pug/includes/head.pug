meta(charset="UTF-8")
meta(http-equiv="X-UA-Compatible", content="ie=edge")
meta(name="viewport", content="width=device-width, initial-scale=1.0")
meta(name="format-detection", content="telephone=no")

//- Favicons
link(rel="apple-touch-icon", sizes="180x180", href="/assets/favicons/apple-touch-icon.png")
link(rel="icon", sizes="32x32", href="/assets/favicons/favicon-32x32.png", type="image/png")
link(rel="icon", sizes="16x16", href="/assets/favicons/favicon-16x16.png", type="image/png")
link(rel="manifest", href="/assets/favicons/site.webmanifest")
link(rel="mask-icon", href="/assets/favicons/safari-pinned-tab.svg", color="#5bbad5")
link(rel="shortcut icon", href="/assets/favicons/favicon.ico")
meta(name="msapplication-TileColor", content="#da532c")
meta(name="msapplication-config", content="/assets/favicons/browserconfig.xml")
meta(name="theme-color", content="#ffffff")

//- Modern fonts preload
for font in ["Gilroy-Regular", "Gilroy-Medium", "Gilroy-SemiBold"]
  link(type="font/woff2", href=`/assets/fonts/${font}.woff2`, rel="preload", as="font", crossorigin="anonymous")

//- External library from CDN
link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css")
