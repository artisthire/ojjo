extends ../layout/default.pug

block title
  title Главная

block content
  main
    section.page-section
      .container
        .products
          .products__head
            .page-section__subtitle К мероприятиям
            h2.page-section__title Настоящая красота здесь!

          form.products__form.products-form(action="/", method="GET")
            -
              var categoryData = [
                {id: "prod-wedding", text: "Свадьба"},
                {id: "prod-husband", text: "Мужу"},
                {id: "prod-wife", text: "Жене"},
                {id: "prod-partner", text: "Партнеру"},
                {id: "prod-collection", text: "Коллекции"},
                {id: "prod-rarity", text: "Редкость"},
              ]
              var active = "prod-wedding"
            for data in categoryData
              p.products-form__item
                if (data.id === active)
                  input.visually-hidden(id=`${data.id}`, type="radio", name="product-collection", checked)
                else
                  input.visually-hidden(id=`${data.id}`, type="radio", name="product-collection")
                label.products-form__btn(for=`${data.id}`)= `${data.text}`
            button.visually-hidden(type="submit", tabindex=-1) Найти

          ul.products-result
            - var productNames = ["кольца", "серьги", "подвески", "запонки", "браслеты", "часы"]
            for name, index in productNames
              li
                a.present-cart(href=`#product-${index + 1}`)
                  img.present-cart__img(src=`../../assets/img/product-category-${index + 1}.jpg`, alt=`${name}`, width="350", height="280")
                  p.present-cart__text= `${name}`

    section.page-section.page-section--light.page-section--bgn-twirl.salon
      .page-section__container
        .page-section__subtitle Не знаете, что выбрать?
        h2.page-section__title Посетите наши салоны в Москве
        p.salon__description
          | Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut duis tortor vitae pellentesque egestas quam pulvinar.
          | Pellentesque porttitor velit sit pellentesque. Suspendisse donec pretium id dignissim.
          | Dignissim ultrices eget orci viverra. Egestas quis et ut ultrices imperdiet lectus nulla tempus.
          | Pharetra lorem sem purus nisi libero viverra ipsum.
        a.button.button--invert(href="#salons") наши салоны

    section.page-section.blog
      .container
        .page-section__subtitle Полезные статьи
        h2.page-section__title Лучшие советы по подбору дорогих подарков
        ul.blog__list
          -
            var blogText = [
              "Как выбрать<br/>часы для своей будущей жены",
              "Запонки для мужа:<br/>7 ключевых правил покупки аксессуара",
               "Как выбрать обручальные кольца молодоженам"
            ]
          for text, index in blogText
            li
              a.present-cart(href=`#blog-${index + 1}`, target="_blank", rel="noopener noreferrer")
                img.present-cart__img(src=`../../assets/img/blog-img-${index + 1}.jpg`, alt="Изображение блога", width="350", height="370")
                p.present-cart__text.blog__text !{text}
        a.button.button--dark-shadow(href="#our-blog", target="_blank") читать наш блог

    section.page-section.gallery
      .container
        .page-section__subtitle #ojjo_jewerly
        h2.page-section__title Мы в социальных сетях
        ul.gallery__list
          for _, i in Array(6)
            if (i === 0 || i === 5)
              li.gallery__item.gallery__item--video
                a.gallery__link(href=`#blog-link-${i + 1}`, target="_blank", rel="noopener noreferrer")
                  img.gallery__preview(src=`../../assets/img/gallery-video-${i + 1}.jpg`, alt="Превью ссылки", width="555", height="300")
            else
              li.gallery__item
                a.gallery__link(href=`#blog-link-${i + 1}`, target="_blank", rel="noopener noreferrer")
                  img.gallery__preview(src=`../../assets/img/gallery-video-${i + 1}.jpg`, alt="Превью ссылки", width="277", height="300")

    section.page-section.page-section--light.page-section--bgn-twirl.subscribe
      .page-section__container
        .page-section__subtitle Полезные советы и персональный предложения
        h2.page-section__title Эксклюзивная рассылка
        .subscribe__content
          ul.subscribe__advantage
            - var advantageText = ["Личный менеджер", "Доставка и оформление", "Индивидуальный дизайн"]
            for text in advantageText
              li #{text}
          form.subscribe__form(action="/", method="POST")
            input.subscribe__form-input(type="email", name="subscribe-email", placeholder="Ваш e-mail", required)
            button.button.button--dark-shadow.subscribe__form-btn(type="submit") Отправить
